<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.lsy.mapper.DepartmentMapper">

    <!--resultType可写别名，在config中有配置-->
    <select id="findAll" resultType="com.lsy.pojo.Department">
        select *
        from `department`
    </select>

    <select id="findById" parameterType="int" resultType="com.lsy.pojo.Department">
        select *
        from `department`
        where id = #{id}
    </select>

    <select id="findByName" resultType="com.lsy.pojo.Department">
        select *
        from `department`
        where name = #{name}
    </select>

    <select id="countAll" resultType="java.lang.Integer">
        select count(1)
        from `department`
    </select>

    <!--利用pege工具类构造分页-->
    <select id="findByPage" resultType="com.lsy.pojo.Department">
        <bind name="beginindex" value="(pageIndex-1)*showdata"/>
        select * from `department` order by id limit #{beginindex},#{showdata}
    </select>
    <!--用于mybatis分页插件-->
    <select id="findByRowBounds" resultType="com.lsy.pojo.Department">
        select * from `department`
    </select>

    <!--useGeneratedKeys 为是否启用主键自增(数据库也要设置主键递增)，keyColumn 为主键名-->
    <insert id="insert" parameterType="dept" useGeneratedKeys="true" keyColumn="id">
        insert into `department`
        values (null, #{name}, #{age}, #{gender}, #{team})
    </insert>
</mapper>